<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Vítejte, přihlašte se prosím!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Image Source="LoginPic.png" Aspect="AspectFill" HeightRequest="200"/>

        <Entry Placeholder="Username" Text="{Binding Username}" Margin="20,20,20,20"/>

        <Entry Placeholder="Password" Text="{Binding Password}" Margin="20,20,20,20"/>

        <Button Text="Login" Clicked="Button_Clicked" />
    </StackLayout>

</ContentPage>
